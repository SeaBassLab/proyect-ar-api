{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": "./src",
		"alwaysStrict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node"
	},
	"include": [
		"src/**/*.ts",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"server/index.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		".next",
		"out",
		"next.config.js"
	]
}