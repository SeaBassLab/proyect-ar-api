{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2017",
		"outDir": "./dist",
		"module": "commonjs",
		"baseUrl": "./src",
		"alwaysStrict": true,
		"noImplicitAny": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*.ts"
, "src/index.js"	],
	"exclude": [
		"node_modules"
	]
}